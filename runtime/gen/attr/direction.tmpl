{{ if not .IsReadOnly }}
w.starlark{{ .GoName }} = {{ .StarlarkName }}
switch {{ .StarlarkName }} {
case "normal":
	w.{{ .GoPath }} = animation.DirectionNormal
case "reverse":
	w.{{ .GoPath }} = animation.DirectionReverse
case "alternate":
	w.{{ .GoPath }} = animation.DirectionAlternate
case "alternate-reverse":
	w.{{ .GoPath }} = animation.DirectionAlternateReverse
case "":
	w.{{ .GoPath }} = animation.DefaultDirection
default:
	return nil, fmt.Errorf("invalid type for direction: %s (expected 'normal', 'reverse', 'alternate' or 'alternate-reverse')", {{ .StarlarkName }}.Type())
}
{{- end }}
